# Agents OS Environment Variables Template
# Copy this file to .env.local and add your actual API tokens

# Airtable Configuration
AIRTABLE_TOKEN=your_airtable_personal_access_token_here

# Asana Configuration  
ASANA_ACCESS_TOKEN=your_asana_personal_access_token_here

# Slack Configuration
# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=your_slack_bot_token_here

# OAuth 2.0 Configuration (optional - for enhanced features)
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_REDIRECT_URI=http://localhost:3000/oauth/callback

# Slack Workspace Settings
SLACK_TEAM_ID=your_slack_team_id_here
# Optional: Comma-separated list of channel IDs to limit access
SLACK_CHANNEL_IDS=channel_id_1,channel_id_2